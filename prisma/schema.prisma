generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ong {
  id        Int      @id @default(autoincrement())
  nome      String
  descricao String?   // decrição das ongs
  estado    String
  servicos  String[] // array para obter mais serviços
  contato   String?   // meio de o volutário conseguir se comunicar com a ong
}
